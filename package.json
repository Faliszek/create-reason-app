{
  "name": "re-create-app",
  "version": "0.0.1",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": [
        "ReCreateAppApp.exe"
      ],
      "includePackages": [
        "root",
        "@opam/dune",
        "unix",
        "pastel.lib",
        "@opam/yojson",
        "ppx_deriving_yojson.runtime"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": [
        "re-create-app.lib"
      ],
      "main": "TestReCreateApp",
      "name": "TestReCreateApp.exe"
    },
    "library": {
      "name": "re-create-app.lib",
      "namespace": "ReCreateApp",
      "require": [
        "unix",
        "pastel.lib",
        "yojson",
        "ppx_deriving_yojson.runtime"
      ],
      "preprocess": [
        "pps",
        "ppx_deriving_yojson"
      ]
    },
    "executable": {
      "require": [
        "re-create-app.lib"
      ],
      "main": "ReCreateAppApp",
      "name": "ReCreateAppApp.exe"
    }
  },
  "scripts": {
    "run": "esy x ReCreateAppApp.exe",
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestReCreateApp.exe"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/dune": ">=1.6.0",
    "@opam/ppx_deriving_yojson": "3.5.1",
    "@opam/yojson": "1.7.0",
    "@reason-native/pastel": "^0.2.1",
    "ocaml": "4.7.x",
    "pesy": "*",
    "refmterr": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  },
  "main": "index.js",
  "bin": {
    "re-create-app": "./_release/bin/ReCreateAppApp.exe"
  },
  "repository": "git@github.com:Faliszek/re-create-app.git",
  "author": "Pawe≈Ç Falisz <pawlic7@gmail.com>",
  "license": "MIT"
}
