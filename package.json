{
  "name": "create-reason-app",
  "version": "0.0.0",
  "description": "My Project",
  "esy": {
    "build": "pesy",
    "release": {
      "releasedBinaries": [
        "CreateReasonAppApp.exe"
      ]
    }
  },
  "buildDirs": {
    "test": {
      "require": ["create-reason-app.lib"],
      "main": "TestCreateReasonApp",
      "name": "TestCreateReasonApp.exe"
    },
    "library": {
      "name": "create-reason-app.lib",
      "namespace": "CreateReasonApp"
    },
    "executable": {
      "require": ["create-reason-app.lib"],
      "main": "CreateReasonAppApp",
      "name": "CreateReasonAppApp.exe"
    }
  },
  "scripts": {
    "pesy": "bash -c 'env PESY_MODE=update pesy'",
    "test": "esy x TestCreateReasonApp.exe"
  },
  "dependencies": {
    "@opam/dune": ">=1.6.0",
    "@esy-ocaml/reason": "*",
    "refmterr": "*",
    "ocaml": "^4.4.0",
    "pesy": "*"
  },
  "devDependencies": {
    "@opam/merlin": "*"
  }
}
